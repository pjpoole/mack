<p><b>Account:</b> <%= @account.name %></p>

<%= form_for @transaction, url: account_transactions_path(@account) do |f| %>
  <%= f.date_field :date, value: Date.today.to_s %>
  <%= f.text_field :description %>
  <%= f.number_field :amount %>
  <%= f.submit "Create" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Date</th><th>Description</th><th>Amount</th>
    </tr>
  </thead>
  <tbody>
  <% @account.transactions.each do |transaction| %>
    <tr><td><%= transaction.date %></td><td><%= transaction.description %></td><td><%= transaction.amount %></td></tr>
  <% end %>
  </tbody>
</table>
